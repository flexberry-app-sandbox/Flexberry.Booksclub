<h3 class="ui header">{{t "forms.i-i-s-booksclub-spiker-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.familiya
      class=(if (v-get validationModel "familiya" "isInvalid") "error")
      label=(t "forms.i-i-s-booksclub-spiker-e.familiya-caption")
      data-test-i-i-s-booksclub-spiker-e-familiya=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "familiya" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.imya
      class=(if (v-get validationModel "imya" "isInvalid") "error")
      label=(t "forms.i-i-s-booksclub-spiker-e.imya-caption")
      data-test-i-i-s-booksclub-spiker-e-imya=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "imya" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.otchestvo
      class=(if (v-get validationModel "otchestvo" "isInvalid") "error")
      label=(t "forms.i-i-s-booksclub-spiker-e.otchestvo-caption")
      data-test-i-i-s-booksclub-spiker-e-otchestvo=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "otchestvo" "message")}}
  </div>
</form>
